{
	"name": "Magic-Code",
	"displayName": "Magic Code",
	"description": "一款辅助开发的AI编程助手",
	"publisher": "Magic-code",
	"version": "1.3.0",
	"icon": "assets/icons/icoPng.ico",
	"galleryBanner": {
		"color": "#617A91",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.84.0",
		"node": ">=20.18.1"
	},
	"author": {
		"name": "Magic Vet"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/RooVetGit/Magic-Code"
	},
	"homepage": "https://github.com/RooVetGit/Magic-Code",
	"categories": [
		"AI",
		"Chat",
		"Programming Languages",
		"Education",
		"Snippets",
		"Testing"
	],
	"keywords": [
		"cline",
		"claude",
		"dev",
		"mcp",
		"openrouter",
		"coding",
		"agent",
		"autonomous",
		"chatgpt",
		"sonnet",
		"ai",
		"llama",
		"Magic Code",
		"roocode"
	],
	"activationEvents": [
		"onLanguage",
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"submenus": [
			{
				"id": "magic-code.contextMenu",
				"label": "Magic Code"
			},
			{
				"id": "magic-code.terminalMenu",
				"label": "Magic Code"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "magic-code-ActivityBar",
					"title": "Magic Code",
					"icon": "./assets/icons/icoPng.ico"
				}
			]
		},
		"views": {
			"magic-code-ActivityBar": [
				{
					"type": "webview",
					"id": "magic-code.SidebarProvider",
					"name": ""
				}
			]
		},
		"commands": [
			{
				"command": "magic-code.plusButtonClicked",
				"title": "新任务",
				"icon": "$(add)"
			},
			{
				"command": "magic-code.mcpButtonClicked",
				"title": "MCP 服务器",
				"icon": "$(server)"
			},
			{
				"command": "magic-code.promptsButtonClicked",
				"title": "提示词",
				"icon": "$(notebook)"
			},
			{
				"command": "magic-code.historyButtonClicked",
				"title": "历史",
				"icon": "$(history)"
			},
			{
				"command": "magic-code.popoutButtonClicked",
				"title": "在编辑器中打开",
				"icon": "$(link-external)"
			},
			{
				"command": "magic-code.settingsButtonClicked",
				"title": "设置",
				"icon": "$(settings-gear)"
			},
			{
				"command": "magic-code.openInNewTab",
				"title": "在新的标签页中打开",
				"category": "Magic Code"
			},
			{
				"command": "magic-code.explainCode",
				"title": "Magic Code: 解释代码",
				"category": "Magic Code"
			},
			{
				"command": "magic-code.explainCode",
				"title": "解释代码",
				"category": "Magic Code"
			},
			{
				"command": "magic-code.fixCode",
				"title": "修复代码",
				"category": "Magic Code"
			},
			{
				"command": "magic-code.improveCode",
				"title": "改进代码",
				"category": "Magic Code"
			},
			{
				"command": "magic-code.addToContext",
				"title": "添加到上下文",
				"category": "Magic Code"
			},
			{
				"command": "magic-code.terminalAddToContext",
				"title": "添加终端内容到上下文",
				"category": "终端"
			},
			{
				"command": "magic-code.terminalFixCommand",
				"title": "修复此命令",
				"category": "终端"
			},
			{
				"command": "magic-code.terminalExplainCommand",
				"title": "解释此命令",
				"category": "终端"
			},
			{
				"command": "magic-code.terminalFixCommandInCurrentTask",
				"title": "修复此命令（当前任务）",
				"category": "终端"
			},
			{
				"command": "magic-code.terminalExplainCommandInCurrentTask",
				"title": "解释此命令（当前任务）",
				"category": "终端"
			},
			{
				"command": "magic-code.setCustomStoragePath",
				"title": "设置自定义对话存储路径",
				"category": "Magic Code"
			}
		],
		"menus": {
			"editor/context": [
				{
					"submenu": "magic-code.contextMenu",
					"group": "navigation"
				}
			],
			"magic-code.contextMenu": [
				{
					"command": "magic-code.explainCode",
					"group": "1_actions@1"
				},
				{
					"command": "magic-code.fixCode",
					"group": "1_actions@2"
				},
				{
					"command": "magic-code.improveCode",
					"group": "1_actions@3"
				},
				{
					"command": "magic-code.addToContext",
					"group": "1_actions@4"
				}
			],
			"terminal/context": [
				{
					"submenu": "magic-code.terminalMenu",
					"group": "navigation"
				}
			],
			"magic-code.terminalMenu": [
				{
					"command": "magic-code.terminalAddToContext",
					"group": "1_actions@1"
				},
				{
					"command": "magic-code.terminalFixCommand",
					"group": "1_actions@2"
				},
				{
					"command": "magic-code.terminalExplainCommand",
					"group": "1_actions@3"
				},
				{
					"command": "magic-code.terminalFixCommandInCurrentTask",
					"group": "1_actions@5"
				},
				{
					"command": "magic-code.terminalExplainCommandInCurrentTask",
					"group": "1_actions@6"
				}
			],
			"view/title": [
				{
					"command": "magic-code.plusButtonClicked",
					"group": "navigation@1",
					"when": "view == magic-code.SidebarProvider"
				},
				{
					"command": "magic-code.promptsButtonClicked",
					"group": "navigation@2",
					"when": "view == magic-code.SidebarProvider"
				},
				{
					"command": "magic-code.mcpButtonClicked",
					"group": "navigation@3",
					"when": "view == magic-code.SidebarProvider"
				},
				{
					"command": "magic-code.historyButtonClicked",
					"group": "navigation@4",
					"when": "view == magic-code.SidebarProvider"
				},
				{
					"command": "magic-code.popoutButtonClicked",
					"group": "navigation@5",
					"when": "view == magic-code.SidebarProvider"
				},
				{
					"command": "magic-code.settingsButtonClicked",
					"group": "navigation@6",
					"when": "view == magic-code.SidebarProvider"
				}
			]
		},
		"configuration": {
			"title": "Magic Code",
			"properties": {
				"magic-code.allowedCommands": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"npm test",
						"npm install",
						"tsc",
						"git log",
						"git diff",
						"git show"
					],
					"description": "启用'始终批准执行操作'时可以自动执行的命令"
				},
				"magic-code.vsCodeLmModelSelector": {
					"type": "object",
					"properties": {
						"vendor": {
							"type": "string",
							"description": "语言模型的供应商（例如 copilot）"
						},
						"family": {
							"type": "string",
							"description": "语言模型的系列（例如 gpt-4）"
						}
					},
					"description": "VSCode 语言模型 API 的设置"
				},
				"magic-code.customStoragePath": {
					"type": "string",
					"default": "",
					"description": "自定义对话历史存储路径。留空使用默认位置。支持绝对路径(如: 'D:\\MagicCodeStorage')"
				}
			}
		}
	},
	"scripts": {
		"build": "npm run vsix",
		"build:webview": "cd webview-ui && npm run build",
		"build:esbuild": "node esbuild.js --production",
		"compile": "tsc -p . --outDir out && node esbuild.js",
		"install:all": "npm install npm-run-all && npm run install:_all",
		"install:_all": "npm-run-all -p install-*",
		"install-extension": "npm install",
		"install-webview": "cd webview-ui && npm install",
		"install-e2e": "cd e2e && npm install",
		"install-benchmark": "cd benchmark && npm install",
		"lint": "npm-run-all -p lint:*",
		"lint:extension": "eslint src --ext ts",
		"lint:webview": "cd webview-ui && npm run lint",
		"lint:e2e": "cd e2e && npm run lint",
		"lint:benchmark": "cd benchmark && npm run lint",
		"check-types": "npm-run-all -p check-types:*",
		"check-types:extension": "tsc --noEmit",
		"check-types:webview": "cd webview-ui && npm run check-types",
		"check-types:e2e": "cd e2e && npm run check-types",
		"check-types:benchmark": "cd benchmark && npm run check-types",
		"package": "npm-run-all -p build:webview build:esbuild check-types lint",
		"pretest": "npm run compile",
		"dev": "cd webview-ui && npm run dev",
		"test": "npm-run-all -p test:*",
		"test:extension": "jest",
		"test:webview": "cd webview-ui && npm run test",
		"prepare": "husky",
		"publish:marketplace": "vsce publish && ovsx publish",
		"publish": "npm run build && changeset publish && npm install --package-lock-only",
		"version-packages": "changeset version && npm install --package-lock-only",
		"vscode:prepublish": "npm run package",
		"vsix": "rimraf bin && mkdirp bin && npx vsce package --out bin",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"watch-tests": "tsc -p . -w --outDir out",
		"changeset": "changeset",
		"knip": "knip --include files",
		"clean": "npm-run-all -p clean:*",
		"clean:extension": "rimraf bin dist out",
		"clean:webview": "cd webview-ui && npm run clean",
		"clean:e2e": "cd e2e && npm run clean",
		"clean:benchmark": "cd benchmark && npm run clean",
		"update-contributors": "node scripts/update-contributors.js"
	},
	"dependencies": {
		"@anthropic-ai/bedrock-sdk": "^0.10.2",
		"@anthropic-ai/sdk": "^0.37.0",
		"@anthropic-ai/vertex-sdk": "^0.7.0",
		"@aws-sdk/client-bedrock-runtime": "^3.706.0",
		"@google-cloud/vertexai": "^1.9.3",
		"@google/generative-ai": "^0.18.0",
		"@mistralai/mistralai": "^1.3.6",
		"@modelcontextprotocol/sdk": "^1.7.0",
		"@types/clone-deep": "^4.0.4",
		"@types/pdf-parse": "^1.1.4",
		"@types/tmp": "^0.2.6",
		"@types/turndown": "^5.0.5",
		"@types/vscode": "^1.95.0",
		"@vscode/codicons": "^0.0.36",
		"axios": "^1.7.4",
		"cheerio": "^1.0.0",
		"chokidar": "^4.0.1",
		"clone-deep": "^4.0.1",
		"default-shell": "^2.2.0",
		"delay": "^6.0.0",
		"diff": "^5.2.0",
		"diff-match-patch": "^1.0.5",
		"fast-deep-equal": "^3.1.3",
		"fast-xml-parser": "^4.5.1",
		"fastest-levenshtein": "^1.0.16",
		"fzf": "^0.5.2",
		"get-folder-size": "^5.0.0",
		"globby": "^14.0.2",
		"i18next": "^24.2.2",
		"isbinaryfile": "^5.0.2",
		"js-tiktoken": "^1.0.19",
		"mammoth": "^1.8.0",
		"monaco-vscode-textmate-theme-converter": "^0.1.7",
		"openai": "^4.78.1",
		"os-name": "^6.0.0",
		"p-wait-for": "^5.0.2",
		"pdf-parse": "^1.1.1",
		"pkce-challenge": "^4.1.0",
		"posthog-node": "^4.7.0",
		"pretty-bytes": "^6.1.1",
		"puppeteer-chromium-resolver": "^23.0.0",
		"puppeteer-core": "^23.4.0",
		"reconnecting-eventsource": "^1.6.4",
		"say": "^0.16.0",
		"serialize-error": "^11.0.3",
		"simple-git": "^3.27.0",
		"sound-play": "^1.1.0",
		"string-similarity": "^4.0.4",
		"strip-ansi": "^7.1.0",
		"strip-bom": "^5.0.0",
		"tmp": "^0.2.3",
		"tree-sitter-wasms": "^0.1.11",
		"turndown": "^7.2.0",
		"web-tree-sitter": "^0.22.6",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.10",
		"@changesets/types": "^6.0.0",
		"@dotenvx/dotenvx": "^1.34.0",
		"@types/debug": "^4.1.12",
		"@types/diff": "^5.2.1",
		"@types/diff-match-patch": "^1.0.36",
		"@types/glob": "^8.1.0",
		"@types/jest": "^29.5.14",
		"@types/node": "20.x",
		"@types/string-similarity": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"esbuild": "^0.24.0",
		"eslint": "^8.57.0",
		"glob": "^11.0.1",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-simple-dot-reporter": "^1.0.5",
		"knip": "^5.44.4",
		"lint-staged": "^15.2.11",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"prettier --write"
		],
		"src/**/*.{ts,tsx}": [
			"npx eslint -c .eslintrc.json --max-warnings=0 --fix"
		],
		"webview-ui/**/*.{ts,tsx}": [
			"npx eslint -c webview-ui/.eslintrc.json --max-warnings=0 --fix"
		]
	}
}
